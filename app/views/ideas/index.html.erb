<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to idea.name, idea %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, width: 200,class:"idea-photo") if idea.picture.present? %></td>
        <td><%= link_to 'Show', idea, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', idea, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path, class:"btn btn-default" %>
